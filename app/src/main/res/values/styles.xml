<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="YsDisplayMediumBlackText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="YsDisplayMediumWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="WhiteBigButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/main_screen_black_button_text</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/main_screen_black_button_text</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BlueBackgroundColor">
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/main_background</item>
    </style>

</resources>
