<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="YsDisplayMediumBlackText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="YsDisplayMediumWhiteText">
        <item name="android:textColor">@color/mai_title_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="WhiteBigButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/big_button_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/big_button_text</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="iconTint">@color/big_button_text</item>
    </style>

    <style name="Toolbar">
        <item name="titleMarginStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">12dp</item>
        <item name="navigationIcon">@drawable/arrow</item>
    </style>

    <style name="ToolbarText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="titleTextColor">@color/back_title</item>
    </style>

    <style name="SettingsText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:textColor">@color/settings_text_row</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
    </style>

    <style name="ImageSettings">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundTintMode">multiply</item>
    </style>

    <style name="SearchInput">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:textColorHint">@color/search_input</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="SearchHint">
        <item name="android:textSize">@dimen/text_search_hint</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/search_hint</item>
    </style>

    <style name="TrackName">
        <item name="android:textSize">@dimen/text_track_name</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_name</item>
    </style>

    <style name="ArtistName">
        <item name="android:textSize">@dimen/text_artist_name</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/artist_name</item>
    </style>
</resources>
