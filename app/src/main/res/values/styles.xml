<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="YsDisplayMediumBlackText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="YsDisplayMediumWhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="WhiteBigButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black_gray</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BlueBackgroundColor">
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="BackTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:layout_toEndOf">@id/back_button</item>
        <item name="layout_constraintBottom_toBottomOf">@id/back_button</item>
        <item name="layout_constraintStart_toEndOf">@id/back_button</item>
        <item name="layout_constraintTop_toTopOf">@id/back_button</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
    </style>

    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:foregroundTint">@color/gray</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="SettingsLayoutMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">18dp</item>
    </style>

</resources>
