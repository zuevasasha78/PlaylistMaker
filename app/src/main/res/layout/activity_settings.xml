<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingsActivity">

    <ImageButton
        android:id="@+id/back_button"
        style="@style/BackButton">

    </ImageButton>

    <TextView
        android:id="@+id/title"
        style="@style/BackTitle"
        android:text="@string/settings" />

    <FrameLayout
        android:id="@+id/dark_theme"
        style="@style/SettingsLayoutMargin"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/back_button">

        <TextView
            style="@style/SettingsText"
            android:text="@string/dark_theme" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/share_app"
        style="@style/SettingsLayoutMargin"
        app:layout_constraintTop_toBottomOf="@+id/dark_theme">

        <TextView
            style="@style/SettingsText"
            android:text="@string/share_app" />

        <ImageButton
            style="@style/ImageSettings"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/call_support"
        style="@style/SettingsLayoutMargin"
        app:layout_constraintTop_toBottomOf="@+id/share_app">

        <TextView
            style="@style/SettingsText"
            android:text="@string/call_support" />

        <ImageButton
            style="@style/ImageSettings"
            android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/legal_agreement"
        style="@style/SettingsLayoutMargin"
        app:layout_constraintTop_toBottomOf="@+id/call_support">

        <TextView
            style="@style/SettingsText"
            android:text="@string/user_agreement" />

        <ImageButton
            style="@style/ImageSettings"
            android:src="@drawable/arrow_forward" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
